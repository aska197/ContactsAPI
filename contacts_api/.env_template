# Database URL for PostgreSQL
# Format: postgresql://<username>:<password>@<host>:<port>/<database_name>
DATABASE_URL=postgresql://<username>:<password>@<host>:<port>/<database_name>

# URL for Redis instance
# Format: redis://<host>:<port>/<database_number>
REDIS_URL=redis://<host>:<port>/<database_number>

# PostgreSQL database name
POSTGRES_DB=<database_name>

# PostgreSQL username
POSTGRES_USER=<username>

# PostgreSQL password
POSTGRES_PASSWORD=<password>

# Secret key for JWT token encryption
# This should be a long, random string
SECRET_KEY=<your_secret_key>

# Algorithm for JWT token
# Commonly used: HS256
ALGORITHM=<algorithm_for_jwt_token>

# Email username for sending emails
MAIL_USERNAME=<your_email@example.com>

# Email password or app-specific password for sending emails
MAIL_PASSWORD=<your_email_password>

# Email address from which emails will be sent
MAIL_FROM=<your_email@example.com>

# Port for the email server (e.g., 587 for TLS, 465 for SSL)
MAIL_PORT=<email_server_port>

# SMTP server for sending emails (e.g., smtp.gmail.com for Gmail)
MAIL_SERVER=<smtp_server>

# Enable TLS for email sending
MAIL_TLS=True

# Enable SSL for email sending
MAIL_SSL=False

# Redis host address
REDIS_HOST=<redis_host>

# Redis port number
REDIS_PORT=<redis_port>

# Cloudinary cloud name
CLOUDINARY_CLOUD_NAME=<cloudinary_cloud_name>

# Cloudinary API key
CLOUDINARY_API_KEY=<cloudinary_api_key>

# Cloudinary API secret
CLOUDINARY_API_SECRET=<cloudinary_api_secret>
